{
  "name": "NeuraFit - AI Fitness Trainer",
  "short_name": "NeuraFit",
  "description": "Your AI-powered personal fitness trainer. Get personalized workouts that adapt to your progress.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#0ea5e9",
  "orientation": "portrait-primary",
  "categories": ["health", "fitness", "lifestyle"],
  "lang": "en-US",
  "icons": [
    {
      "src": "/neurafit-icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/neurafit-icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/neurafit-icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "AI Workout Generation"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Workout Interface"
    }
  ],
  "shortcuts": [
    {
      "name": "Generate Workout",
      "short_name": "Generate",
      "description": "Create a new AI-powered workout",
      "url": "/app?action=generate",
      "icons": [
        {
          "src": "/neurafit-icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Start Quick Workout",
      "short_name": "Quick Start",
      "description": "Jump into a quick workout session",
      "url": "/app/workout",
      "icons": [
        {
          "src": "/neurafit-icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "View Progress",
      "short_name": "Progress",
      "description": "Check your fitness analytics and achievements",
      "url": "/app/analytics",
      "icons": [
        {
          "src": "/neurafit-icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/app/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+neurafit",
      "url": "/app?action=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "related_applications": [],
  "prefer_related_applications": false
}
